<div class="blog-post">
<p>
  <h1>Rails Blog Post #<%= @article.id %>: <%= @article.title %></h1>
</p>
<p>
  <%= @article.text %>
</p>

</div>

<div class="comments-box">
<h3>Comments:</h3>
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>
</div>

<div class="navigation">
<%= link_to 'Edit', edit_article_path(@article) %> | <%= link_to 'Back', articles_path %>
</div>